<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/vground"

    tools:context="com.ldir.logo.activities.MenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_weight="2"
            android:layout_gravity="center" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/go"
                android:scaleType="fitCenter"
                android:background="@null"
                android:onClick="onStartGame"
                android:baselineAlignBottom="false"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:cropToPadding="false"
                android:id="@+id/goButton"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Levels"
                android:onClick="onSelectLevels"
                android:layout_margin="10dp"
                android:id="@+id/levelsButton"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/goButton" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
