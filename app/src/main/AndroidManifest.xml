<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ldir.logo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8" />
<!-- in application
    android:hardwareAccelerated="false"
    android:largeHeap="true"
-->
    <application
        android:name=".activities.GameApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".activities.MenuActivity"
            android:label="@string/title_activity_menu">
            <!--android:screenOrientation="landscape"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GameActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name=".activities.NextLevelActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".activities.GameWinActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".activities.TimeoutActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.Dialog" />
         <activity
            android:name=".activities.GameOptActvity"
            android:label="@string/title_activity_game_opt_actvity"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>