<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ldir.logo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:name=".platform.GameApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".platform.MenuActivity"
            android:label="@string/title_activity_menu">
            <!--android:screenOrientation="landscape"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".platform.GameActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name=".platform.NextLevelActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".platform.GameWinActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".platform.TimeoutActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.Dialog" />
         <activity
            android:name=".platform.GameOptActvity"
            android:label="@string/title_activity_game_opt_actvity"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>